<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nishu.tellme.RewardActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rewardcard"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="50dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/points"
                    android:textAlignment="center"
                    android:textSize="40dp"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_below="@id/rewardcard"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:text="Congratulations....!!
Get rewards on weekly update of data
Get DISCOUNT on agriculture commodities by showing these Rewards."
            android:textAlignment="center"
            android:textSize="17dp"/>
    </RelativeLayout>

</RelativeLayout>
