<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nishu.tellme.CanalActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/curve_bg">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Canal Water Calculator"
                android:textSize="30dp"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:layout_marginVertical="23dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="70dp"
            android:layout_marginHorizontal="30dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/relativeLayout">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                app:cardElevation="12dp"
                app:cardCornerRadius="10dp">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/arealayout"
                            android:layout_below="@id/farmName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="11dp"
                            android:layout_marginVertical="30dp">
                            <EditText
                                android:id="@+id/area"
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:layout_marginHorizontal="10dp"
                                android:inputType="number"
                                android:hint="Farm Area"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp">
                                <Spinner
                                    android:id="@+id/units"
                                    android:layout_width="100dp"
                                    android:layout_height="80dp">
                                </Spinner>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/depthlayout"
                            android:layout_below="@id/arealayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="11dp">
                            <EditText
                                android:id="@+id/depth"
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:layout_marginHorizontal="10dp"
                                android:inputType="number"
                                android:hint="Depth"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <Spinner
                                    android:id="@+id/depthunits"
                                    android:layout_width="100dp"
                                    android:layout_height="80dp">
                                </Spinner>
                            </LinearLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Farm Area"/>
                        </RelativeLayout>
                        <LinearLayout
                            android:id="@+id/submit"
                            android:layout_below="@id/depthlayout"
                            android:layout_marginVertical="20dp"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/calculate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/colour_button"
                                android:text="Calculate"
                                android:textColor="#ffffff"
                                android:textSize="17dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/submit">
                            <TextView
                                android:id="@+id/output"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:layout_marginHorizontal="30dp"
                                android:textSize="20dp"/>
                        </LinearLayout>
                    </RelativeLayout>
                </ScrollView>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
