<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nishu.tellme.FarmDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/curve_bg">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Farm Details"
                android:textSize="30dp"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:layout_marginVertical="23dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="70dp"
            android:layout_marginHorizontal="30dp"
            android:id="@+id/relativeLayout">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                app:cardElevation="12dp"
                app:cardCornerRadius="10dp">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="25dp">
                        <EditText
                            android:id="@+id/farmName"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Farm Name"
                            android:layout_marginVertical="5dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_centerHorizontal="true"/>
                        <LinearLayout
                            android:id="@+id/arealayout"
                            android:layout_below="@id/farmName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:layout_marginHorizontal="30dp">
                            <EditText
                                android:id="@+id/area"
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:inputType="number"
                                android:hint="Farm Area"/>
                            <Spinner
                                android:id="@+id/units"
                                android:inputType="number"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp">
                            </Spinner>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/waterlevel"
                            android:layout_below="@id/arealayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginVertical="5dp"
                            android:layout_centerHorizontal="true">
                            <EditText
                                android:id="@+id/wlevel"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:hint="Ground Water Level (m)"
                                android:inputType="number"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/soiltype"
                            android:layout_below="@id/waterlevel"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginVertical="5dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_centerHorizontal="true">
                            <Spinner
                                android:id="@+id/soil"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            </Spinner>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/location"
                            android:layout_below="@id/soiltype"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginVertical="5dp"
                            android:layout_centerHorizontal="true">
                            <EditText
                                android:id="@+id/locationText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Location"
                                android:enabled="false"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/getlocation"
                            android:layout_below="@id/location"
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginVertical="10dp">
                            <Button
                                android:id="@+id/getLocation"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/stroke_button"
                                android:text="Get Location"
                                android:inputType="number"
                                android:textColor="@color/end_color_blue"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/submitbutton"
                            android:layout_below="@id/getlocation"
                            android:layout_marginVertical="20dp"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true">

                            <Button
                                android:id="@+id/submit"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/colour_button"
                                android:text="Submit"
                                android:textColor="#ffffff"
                                android:textSize="17dp" />
                        </LinearLayout>
                        <TextView
                            android:layout_below="@id/submitbutton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Delete Farm"
                            android:layout_marginHorizontal="10dp"
                            android:textAlignment="center"
                            android:textSize="17dp"
                            android:textColor="@color/medim_color_blue" />
                    </RelativeLayout>
                </ScrollView>
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
