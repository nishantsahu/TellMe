<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nishu.tellme.RegistrationActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_register">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Register"
            android:textColor="#ffff"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_marginTop="30dp" />
        <EditText
            android:id="@+id/aadhar_register"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:maxLength="12"
            android:background="@drawable/textfield"
            android:hint="Enter Aadhar Number"
            android:drawableLeft="@mipmap/aadhar"
            android:inputType="number" />
        <Button
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:text="Get OTP"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:id="@+id/getOTP"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:id="@+id/popup"
        android:background="#90000000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_black_24dp"
                android:id="@+id/close"/>
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="310dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:layout_marginTop="370dp"
            android:innerRadius="0dp"
            android:shape="line"
            app:cardCornerRadius="20dp"
            app:cardElevation="14dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/otpmobilenumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="OTP has been sent to your mobile number"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="xxx"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/enterotp"
                        android:layout_width="270dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/button_whitebg"
                        android:drawableLeft="@mipmap/otp"
                        android:hint="Enter OTP"
                        android:inputType="number" />

                    <Button

                        android:id="@+id/verify"
                        android:layout_width="170dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="110dp"
                        android:background="@drawable/colour_button"
                        android:text="Verify"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

</RelativeLayout>
